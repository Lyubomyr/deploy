check process unicorn with pidfile /app/shared/tmp/pids/unicorn.pid
  start program = "/etc/init.d/unicorn start"
  stop program = "/etc/init.d/unicorn stop"
  if 5 restarts with 5 cycles then timeout
  if does not exist for 1 cycle then restart
  if does not exist for 2 cycle then exec "/etc/monit/slack_notifications.sh" else if succeeded then exec "/etc/monit/slack_notifications.sh"
